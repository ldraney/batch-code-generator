{
  "name": "batch-code-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t batch-code-generator .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:monitoring": "docker-compose -f monitoring/docker-compose.monitoring.yml up",
    "setup": "chmod +x scripts/setup-dev.sh && ./scripts/setup-dev.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest tests/jest-tests/integration --passWithNoTests",
    "test:e2e": "playwright test tests/playwright-tests/e2e",
    "test:e2e:ui": "playwright test --ui",
    "test:load": "artillery run tests/load/basic-load.yml",
    "test:all": "./scripts/test-all.sh",
    "test:e2e:install": "npx playwright install",
    "test:regression": "./scripts/test-regression.sh",
    "test:smoke": "jest tests/jest-tests/regression/smoke --passWithNoTests",
    "test:contracts": "jest tests/jest-tests/regression/api --passWithNoTests",
    "test:performance": "jest tests/jest-tests/regression/performance --passWithNoTests",
    "test:visual": "playwright test tests/playwright-tests/visual/component-tests.test.ts",
    "capture:baselines": "./scripts/capture-baselines.sh",
    "test:unit": "jest src/",
    "test:regression:api": "jest tests/jest-tests/regression",
    "test:all:ci": "npm run test -- --passWithNoTests && npm run test:integration && npm run test:contracts && npm run test:performance && npm run test:smoke && npm run test:visual"
  },
  "dependencies": {
    "@sentry/nextjs": "^9.35.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.0.6",
    "next": "^14.2.30",
    "prom-client": "^15.1.0",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.2.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/pngjs": "^6.0.5",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.7.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "postcss": "^8",
    "supertest": "^7.1.1",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
