# .env.production.example
# Production Environment Variables Template

# App Configuration
NODE_ENV=production
PORT=3000

# Monday.com API Configuration
MONDAY_API_KEY=your_production_monday_api_key
MONDAY_BATCH_CODE_COLUMN_ID=your_batch_code_column_id
MONDAY_WEBHOOK_SECRET=your_production_webhook_secret

# Webhook Security
WEBHOOK_SECRET=your_production_webhook_secret

# Sentry Configuration (Production)
SENTRY_DSN=your_production_sentry_dsn
SENTRY_ORG=your_org_slug
SENTRY_PROJECT=batch-code-generator
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Database Configuration
DATABASE_PATH=/app/data/batch_codes.db

# API Rate Limiting
MONDAY_API_RATE_LIMIT=100
BATCH_CODE_GENERATION_LIMIT=1000

# Feature Flags
ENABLE_BATCH_CODE_GENERATION=true
ENABLE_WEBHOOK_LOGGING=true
ENABLE_DUPLICATE_CHECK=true

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
